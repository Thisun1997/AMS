extends layout

block content
    h1.greeting Admin Area
    .login-panel(style="float:none; padding-left:50px; padding-bottom:20px; margin-bottom:20px;")
        table(class="table")
                tr
                    td Add, view and edit shedules
                    td
                        a(style = "text-decoration: none;" href="/admin/addShedulePage" class="btn btn-info") Add Shedules
                tr
                    td Mark delays for the shedules available  
                    td
                        a(style = "text-decoration: none;" href="/admin/addDelayPage" class="btn btn-info") Mark delays 
                tr
                    td View full details of all the time tables 
                    td  
                        a(style = "text-decoration: none;" href="/admin/viewTimeTablePage" class="btn btn-info") view trip details 
                tr
                    td Add, delete airports
                    td   
                        a(style = "text-decoration: none;" href="/admin/addAirportPage" class="btn btn-info") Add and View Airport
                tr
                    td Add, delete airplaneTypes
                    td 
                        a(style = "text-decoration: none;" href="/admin/addAirplaneTypePage" class="btn btn-info") Add Air plane types and View seatings 
                tr
                    td Add and View Air planes
                    td 
                        a(style = "text-decoration: none;" href="/admin/addAirplanePage" class="btn btn-info") Add and View Air planes
                tr
                    td Add and View Passenger categories
                    td 
                        a(style = "text-decoration: none;" href="/admin/addPassengerCategoryPage" class="btn btn-info") Add and View Passenger categories
                tr
                    td Add and view routes
                    td 
                        a(style = "text-decoration: none;" href="/admin/addRoutePage" class="btn btn-info") Add and view routes
                tr
                    td  number of seats reserved
                    td 
                        a(style = "text-decoration: none;" href="/admin/generateReport1" class="btn btn-info") view
                tr
                    td  number of passengers in categories 
                    td 
                        a(style = "text-decoration: none;" href="/admin/generateReport2" class="btn btn-info") view
                tr
                    td  Passenger details travelling in flights on today
                    td 
                        a(style = "text-decoration: none;" href="/admin/generateReport3" class="btn btn-info") view
                tr
                    td  All flight details
                    td 
                        a(style = "text-decoration: none;" href="/admin/generateReport4" class="btn btn-info") view
                tr
                    td  Revenue generated by each flight type
                    td 
                        a(style = "text-decoration: none;" href="/admin/generateReport5" class="btn btn-info") view

